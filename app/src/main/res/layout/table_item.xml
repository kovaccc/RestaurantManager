<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"

    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvTableNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:text="Table:1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tvCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvNumberOfPersons"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="12dp"
            android:text="Charge:"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvTableNumber"
            android:layout_alignParentStart="true"
            android:layout_marginStart="47dp"
            android:layout_marginBottom="108dp"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:text="" />

        <Button
            android:background="?android:attr/colorAccent"

            android:typeface="serif"
            android:textSize="19sp"
            android:id="@+id/btnFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvTableNumber"
            android:layout_alignParentStart="true"
            android:layout_marginStart="307dp"
            android:layout_marginBottom="8dp"

            android:textColor="@android:color/white"
            android:text="Free" />

        <Button
            android:textColor="@android:color/white"
            android:background="?android:attr/colorAccent"

            android:typeface="serif"
            android:textSize="19sp"
            android:id="@+id/btnReserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnFree"
            android:layout_alignParentStart="true"
            android:layout_marginStart="307dp"
            android:layout_marginBottom="24dp"
            android:text="Reserve" />

        <TextView
            android:id="@+id/tvNumberOfPersons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvTableNumber"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="8dp"
            android:text="Persons: 5"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <Button
            android:id="@+id/btnCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvTableNumber"
            android:layout_alignParentStart="true"
            android:layout_marginStart="108dp"
            android:layout_marginBottom="8dp"
            android:background="@color/fbutton_color_wet_asphalt"
            android:text="Charge"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:typeface="serif" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>